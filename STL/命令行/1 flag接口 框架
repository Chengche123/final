package main

import (
	"flag"
	"fmt"
)

type testFlag struct {
	name string
}

func (t *testFlag) String() string {
	return t.name
}

func (t *testFlag) Set(s string) error {
	t.name = s
	return nil
}

func main() {
	var test testFlag
	flag.CommandLine.Var(&test, "name", "input name")
	flag.Parse()
	fmt.Println(test.name)
}